{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "target": "es2021"
  },
  "include": [
    "src/**/*",
    "gen/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}